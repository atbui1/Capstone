<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp300"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/bg_btn_follow"
    android:orientation="vertical">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="51dp">

        <androidx.appcompat.widget.SearchView
            android:id="@+id/search_view"
            android:background="@drawable/bg_edt"
            android:layout_marginLeft="@dimen/dp50"
            android:layout_marginRight="@dimen/dp50"
            android:layout_marginTop="@dimen/dp5"
            android:layout_marginBottom="@dimen/dp5"
            app:actionViewClass="androidx.appcompat.widget.SearchView"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp40"></androidx.appcompat.widget.SearchView>
        <LinearLayout
            android:background="@color/sick_green"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp1"></LinearLayout>
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_view_province_bottom_sheet"
        android:layout_marginTop="@dimen/dp5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </androidx.recyclerview.widget.RecyclerView>
</LinearLayout>
