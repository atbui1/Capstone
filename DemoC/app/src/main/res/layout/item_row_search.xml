<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/lnl_root_vegetable"
        android:weightSum="10"
        android:orientation="horizontal"
        android:background="@color/red"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp100">
        <LinearLayout
            android:layout_weight="4"
            android:gravity="center"
            android:background="@color/dark_yellow"
            android:layout_width="@dimen/dp0"
            android:layout_height="match_parent">
            <LinearLayout
                android:background="@color/red"
                android:layout_width="@dimen/dp80"
                android:layout_height="@dimen/dp80">
                <ImageView
                    android:id="@+id/img_vegetable"
                    android:src="@drawable/avatar1"
                    android:scaleType="fitStart"
                    android:adjustViewBounds="true"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_weight="6"
            android:orientation="vertical"
            android:background="@color/light_sky_blue"
            android:layout_width="@dimen/dp0"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/txt_vegetable_name"
                    android:text="ten"
                    android:textSize="@dimen/dp20"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/dp20"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp50" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/txt_vegetable_description"
                    android:text="ten"
                    android:textSize="@dimen/dp20"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/dp20"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp50" />
            </LinearLayout>
            <!--<LinearLayout-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="wrap_content">-->
                <!--<TextView-->
                    <!--android:id="@+id/txt_vegetable_feature"-->
                    <!--android:text="ten"-->
                    <!--android:textSize="@dimen/dp20"-->
                    <!--android:gravity="center_vertical"-->
                    <!--android:paddingLeft="@dimen/dp20"-->
                    <!--android:layout_width="match_parent"-->
                    <!--android:layout_height="@dimen/dp50" />-->
            <!--</LinearLayout>-->

        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:background="@color/red"
        android:layout_width="match_parent"
        android:layout_marginBottom="5dp"
        android:layout_height="@dimen/dp1"></LinearLayout>

</LinearLayout>