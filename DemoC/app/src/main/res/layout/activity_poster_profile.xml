<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.PosterProfileActivity">

    <!--tool bar custom by linearLayout-->
    <LinearLayout
        android:weightSum="10"
        android:orientation="horizontal"
        android:background="@color/sick_green"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp50">
        <!--arrow left item-->
        <LinearLayout
            android:id="@+id/lnl_back_profile_home"
            android:layout_weight="2"
            android:gravity="center"
            android:layout_width="@dimen/dp0"
            android:layout_height="match_parent">
            <ImageView
                android:src="@drawable/arrow_left_v"
                android:layout_width="@dimen/dp30"
                android:layout_height="@dimen/dp30" />
        </LinearLayout>
        <!--menu title-->
        <LinearLayout
            android:layout_weight="6"
            android:layout_width="@dimen/dp0"
            android:layout_height="match_parent">
            <TextView
                android:text="@string/menu_title_profile"
                android:gravity="center"
                android:textSize="@dimen/sp20"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </LinearLayout>
        <!--menu right -->
        <LinearLayout
            android:layout_weight="2"
            android:layout_width="@dimen/dp0"
            android:layout_height="match_parent"></LinearLayout>
    </LinearLayout>
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp150">
                    <!--avatar image-->
                    <LinearLayout
                        android:gravity="center"
                        android:elevation="@dimen/dp80"
                        android:layout_width="@dimen/dp100"
                        android:layout_height="@dimen/dp100">
                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/img_avatar"
                            android:src="@drawable/avatar1"
                            android:layout_width="@dimen/dp80"
                            android:layout_height="@dimen/dp80" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <TextView
                            android:id="@+id/txt_poster_full_name"
                            android:text="abc"
                            android:textSize="@dimen/sp25"
                            android:textStyle="bold"
                            android:gravity="center_horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" />
                    </LinearLayout>
                </LinearLayout>

                <!--posts sum-->
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp50">
                    <!--title posts-->
                    <LinearLayout
                        android:layout_weight="1"
                        android:layout_width="@dimen/dp0"
                        android:layout_height="match_parent">
                        <TextView
                            android:text="Số bài viết"
                            android:textSize="@dimen/sp20"
                            android:gravity="center|end"
                            android:paddingRight="@dimen/dp20"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" />
                    </LinearLayout>
                    <!--number posts-->
                    <LinearLayout
                        android:layout_weight="1"
                        android:layout_width="@dimen/dp0"
                        android:layout_height="match_parent">
                        <TextView
                            android:id="@+id/txt_total_posts"
                            android:textSize="@dimen/sp20"
                            android:textStyle="bold"
                            android:gravity="center|start"
                            android:paddingLeft="@dimen/dp20"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" />
                    </LinearLayout>
                </LinearLayout>
                <!--button add friend-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp50">
                    <Button
                        android:id="@+id/btn_add_friend"
                        android:background="@drawable/bg_btn_login"
                        android:textColor="@color/white"
                        android:textSize="@dimen/sp20"
                        android:layout_marginLeft="@dimen/dp50"
                        android:layout_marginRight="@dimen/dp50"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />
                </LinearLayout>
                <!--button follow-->
                <LinearLayout
                    android:id="@+id/lnl_btn_remove_add_friend"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp50">
                    <Button
                        android:id="@+id/btn_remove_add_friend"
                        android:background="@drawable/bg_btn_login"
                        android:textColor="@color/white"
                        android:textSize="@dimen/sp20"
                        android:layout_marginLeft="@dimen/dp50"
                        android:layout_marginRight="@dimen/dp50"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />
                </LinearLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recycler_share_by_account"
                    android:layout_marginTop="@dimen/dp10"
                    android:layout_marginLeft="@dimen/dp16"
                    android:layout_marginRight="@dimen/dp16"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                </androidx.recyclerview.widget.RecyclerView>

            </LinearLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</LinearLayout>