<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.PosterProfileActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <!--custom menu-->
        <!--tool bar custom by linearLayout-->
        <LinearLayout
            android:weightSum="10"
            android:orientation="horizontal"
            android:background="@color/sick_green"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp50">
            <!--arrow left item-->
            <LinearLayout
                android:id="@+id/lnl_back_profile_home"
                android:layout_weight="2"
                android:gravity="center"
                android:layout_width="@dimen/dp0"
                android:layout_height="match_parent">
                <ImageView
                    android:src="@mipmap/leftarrow3"
                    android:layout_width="@dimen/dp40"
                    android:layout_height="@dimen/dp40" />
            </LinearLayout>
            <!--menu title-->
            <LinearLayout
                android:layout_weight="6"
                android:layout_width="@dimen/dp0"
                android:layout_height="match_parent">
                <TextView
                    android:text="@string/menu_title_profile"
                    android:gravity="center"
                    android:textSize="@dimen/sp20"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </LinearLayout>
            <!--menu right -->
            <LinearLayout
                android:layout_weight="2"
                android:layout_width="@dimen/dp0"
                android:layout_height="match_parent"></LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:orientation="vertical"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp150">
                <!--avatar image-->
                <LinearLayout
                    android:gravity="center"
                    android:elevation="@dimen/dp80"
                    android:layout_width="@dimen/dp100"
                    android:layout_height="@dimen/dp100">
                    <de.hdodenhof.circleimageview.CircleImageView
                        android:src="@drawable/avatar1"
                        android:layout_width="@dimen/dp80"
                        android:layout_height="@dimen/dp80" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:id="@+id/txt_poster_full_name"
                        android:text="abc"
                        android:textSize="@dimen/sp25"
                        android:textStyle="bold"
                        android:gravity="center_horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:weightSum="10"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/dp10"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp150">


                <!--right layout-->
                <LinearLayout
                    android:layout_weight="10"
                    android:orientation="vertical"
                    android:layout_width="@dimen/dp0"
                    android:layout_height="match_parent">
                    <!--sub right layout-->
                    <LinearLayout
                        android:layout_weight="2"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp0">
                        <!--posts sum-->
                        <LinearLayout
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:layout_width="@dimen/dp0"
                            android:layout_height="match_parent">
                            <!--number posts-->
                            <LinearLayout
                                android:layout_weight="1"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/dp0">
                                <TextView
                                    android:gravity="center"
                                    android:text="2"
                                    android:textSize="@dimen/sp25"
                                    android:textStyle="bold"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent" />
                            </LinearLayout>
                            <!--title posts-->
                            <LinearLayout
                                android:layout_weight="1"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/dp0">
                                <TextView
                                    android:text="posts"
                                    android:textSize="@dimen/sp15"
                                    android:gravity="center"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent" />
                            </LinearLayout>
                        </LinearLayout>
                        <!--follow-->
                        <LinearLayout
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:layout_width="@dimen/dp0"
                            android:layout_height="match_parent">
                            <!--number follow-->
                            <LinearLayout
                                android:layout_weight="1"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/dp0">
                                <TextView
                                    android:gravity="center"
                                    android:text="3"
                                    android:textSize="@dimen/sp25"
                                    android:textStyle="bold"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent" />
                            </LinearLayout>
                            <!--title follow-->
                            <LinearLayout
                                android:layout_weight="1"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/dp0">
                                <TextView
                                    android:text="followers"
                                    android:textSize="@dimen/sp15"
                                    android:gravity="center"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent" />
                            </LinearLayout>
                        </LinearLayout>
                        <!--following-->
                        <LinearLayout
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:layout_width="@dimen/dp0"
                            android:layout_height="match_parent">
                            <!--number following-->
                            <LinearLayout
                                android:layout_weight="1"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/dp0">
                                <TextView
                                    android:gravity="center"
                                    android:text="4"
                                    android:textSize="@dimen/sp25"
                                    android:textStyle="bold"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent" />
                            </LinearLayout>
                            <!--title following-->
                            <LinearLayout
                                android:layout_weight="1"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/dp0">
                                <TextView
                                    android:text="following"
                                    android:textSize="@dimen/sp15"
                                    android:gravity="center"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent" />
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                    <!--button follow-->
                    <LinearLayout
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp0">
                        <Button
                            android:id="@+id/btn_add_friend"
                            android:background="@drawable/bg_btn_login"
                            android:text="Kết bạn"
                            android:textColor="@color/white"
                            android:textSize="@dimen/sp20"
                            android:textStyle="bold"
                            android:layout_marginLeft="@dimen/dp80"
                            android:layout_marginRight="@dimen/dp80"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="5dp"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" />
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_share_by_account"
                android:layout_marginTop="@dimen/dp10"
                android:layout_marginLeft="@dimen/dp16"
                android:layout_marginRight="@dimen/dp16"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            </androidx.recyclerview.widget.RecyclerView>

        </LinearLayout>
    </LinearLayout>

</ScrollView>