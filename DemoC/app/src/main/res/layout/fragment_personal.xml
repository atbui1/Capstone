<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!--linear into menu-->
        <LinearLayout
            android:gravity="end"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp50">

            <LinearLayout
                android:id="@+id/lnl_menu"
                android:gravity="center"
                android:layout_width="@dimen/dp80"
                android:layout_height="match_parent">
                <ImageView
                    android:src="@mipmap/menuhamburger"
                    android:layout_width="@dimen/dp30"
                    android:layout_height="@dimen/dp30" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp150">
            <!--avatar image-->
            <LinearLayout
                android:gravity="center"
                android:elevation="@dimen/dp80"
                android:layout_width="@dimen/dp100"
                android:layout_height="@dimen/dp100">
                <androidx.cardview.widget.CardView
                    card_view:cardCornerRadius="@dimen/dp40"
                    card_view:cardElevation="@dimen/dp2"
                    card_view:contentPadding="@dimen/dp0"
                    android:layout_marginTop="35dp"
                    android:layout_marginBottom="35dp"
                    android:layout_width="@dimen/dp80"
                    android:layout_height="@dimen/dp80">
                    <ImageView
                        android:id="@+id/img_personal"
                        android:src="@drawable/avatar1"
                        android:scaleType="centerCrop"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />
                </androidx.cardview.widget.CardView>
            </LinearLayout>
            <!--full name-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/txt_full_name_personal"
                    android:text="abc"
                    android:textSize="@dimen/sp25"
                    android:textStyle="bold"
                    android:gravity="center_horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:weightSum="10"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp150">


            <!--right layout-->
            <LinearLayout
                android:layout_weight="10"
                android:orientation="vertical"
                android:layout_width="@dimen/dp0"
                android:layout_height="match_parent">
                <!--sub right layout-->
                <LinearLayout
                    android:layout_weight="2"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp0">
                    <!--posts sum-->
                    <LinearLayout
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_width="@dimen/dp0"
                        android:layout_height="match_parent">
                        <!--number posts-->
                        <LinearLayout
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dp0">
                            <TextView
                                android:id="@+id/txt_total_posts"
                                android:gravity="center"
                                android:text="2"
                                android:textSize="@dimen/sp25"
                                android:textStyle="bold"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent" />
                        </LinearLayout>
                        <!--title posts-->
                        <LinearLayout
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dp0">
                            <TextView
                                android:text="posts"
                                android:textSize="@dimen/sp15"
                                android:gravity="center"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent" />
                        </LinearLayout>
                    </LinearLayout>
                    <!--follow-->
                    <LinearLayout
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_width="@dimen/dp0"
                        android:layout_height="match_parent">
                        <!--number follow-->
                        <LinearLayout
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dp0">
                            <TextView
                                android:gravity="center"
                                android:text="3"
                                android:textSize="@dimen/sp25"
                                android:textStyle="bold"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent" />
                        </LinearLayout>
                        <!--title follow-->
                        <LinearLayout
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dp0">
                            <TextView
                                android:text="followers"
                                android:textSize="@dimen/sp15"
                                android:gravity="center"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent" />
                        </LinearLayout>
                    </LinearLayout>
                    <!--following-->
                    <LinearLayout
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_width="@dimen/dp0"
                        android:layout_height="match_parent">
                        <!--number following-->
                        <LinearLayout
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dp0">
                            <TextView
                                android:gravity="center"
                                android:text="4"
                                android:textSize="@dimen/sp25"
                                android:textStyle="bold"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent" />
                        </LinearLayout>
                        <!--title following-->
                        <LinearLayout
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dp0">
                            <TextView
                                android:text="following"
                                android:textSize="@dimen/sp15"
                                android:gravity="center"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
                <!--button follow-->
                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp0">
                    <Button
                        android:id="@+id/btn_update_account"
                        android:background="@drawable/bg_btn_follow"
                        android:text="@string/btn_title_profile_edit"
                        android:textColor="@color/white"
                        android:textSize="@dimen/sp20"
                        android:textStyle="bold"
                        android:layout_marginLeft="@dimen/dp80"
                        android:layout_marginRight="@dimen/dp80"
                        android:layout_marginTop="@dimen/dp5"
                        android:layout_marginBottom="@dimen/dp5"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

        <!--request add friend-->
        <LinearLayout
            android:orientation="vertical"
            android:layout_marginTop="@dimen/dp50"
            android:gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp50">
            <Button
                android:id="@+id/btn_show_request_add_friend"
                android:text="xem yêu cầu kết bạn"
                android:textColor="@color/white"
                android:background="@drawable/bg_btn_login"
                android:textSize="@dimen/dp30"
                android:paddingLeft="@dimen/dp20"
                android:paddingRight="@dimen/dp20"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />
        </LinearLayout>
        <!--Logout-->
        <LinearLayout
            android:orientation="vertical"
            android:layout_marginTop="@dimen/dp50"
            android:gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp50">
            <Button
                android:id="@+id/btn_logout"
                android:text="Logout"
                android:textColor="@color/white"
                android:background="@drawable/bg_btn_login"
                android:textSize="@dimen/dp30"
                android:paddingLeft="@dimen/dp20"
                android:paddingRight="@dimen/dp20"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />
        </LinearLayout>

        <!-- recycle view -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_share_by_account"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/dp10">

        </androidx.recyclerview.widget.RecyclerView>

    </LinearLayout>
</ScrollView>