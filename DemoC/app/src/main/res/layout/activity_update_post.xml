<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.UpdatePostActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp50">
        <LinearLayout
            android:id="@+id/lnl_back"
            android:layout_weight="1"
            android:background="@color/red"
            android:gravity="center"
            android:layout_width="@dimen/dp0"
            android:layout_height="match_parent">
            <ImageView
                android:src="@mipmap/leftarrow"
                android:layout_width="@dimen/dp20"
                android:layout_height="@dimen/dp20" />
        </LinearLayout>
        <LinearLayout
            android:layout_weight="4"
            android:background="@color/sick_green"
            android:layout_width="@dimen/dp0"
            android:layout_height="match_parent"></LinearLayout>
        <LinearLayout
            android:layout_weight="1"
            android:background="@color/dark_yellow"
            android:layout_width="@dimen/dp0"
            android:layout_height="match_parent"></LinearLayout>
    </LinearLayout>
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_marginTop="@dimen/dp10"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp30">
                <TextView
                    android:text="nội dung"
                    android:textSize="@dimen/sp15"
                    android:textColor="@color/sick_green"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/dp10"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </LinearLayout>
            <!--noi dung, tieu de bai dang-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <EditText
                    android:id="@+id/edt_post_content"
                    android:paddingLeft="@dimen/dp8"
                    android:text="Thanh long không hạt"
                    android:textSize="@dimen/sp15"
                    android:paddingTop="@dimen/dp8"
                    android:background="@drawable/bg_edt"
                    android:inputType="text"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp50" />
            </LinearLayout>
            <!--thong tin rau muon trao doi-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp30">
                <TextView
                    android:text="số lượng"
                    android:textSize="@dimen/sp15"
                    android:textColor="@color/sick_green"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/dp10"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </LinearLayout>
            <!--noi dung, tieu de bai dang-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <EditText
                    android:id="@+id/edt_post_quantity"
                    android:paddingLeft="@dimen/dp8"
                    android:text="Thanh long không hạt"
                    android:textSize="@dimen/sp15"
                    android:paddingTop="@dimen/dp8"
                    android:background="@drawable/bg_edt"
                    android:inputType="number"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp50" />
            </LinearLayout>
            <!--thong tin rau muon trao doi-->
            <LinearLayout
                android:id="@+id/lnl_btn_exchange"
                android:weightSum="10"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp50">
                <LinearLayout
                    android:background="@color/dark_yellow"
                    android:layout_weight="7"
                    android:layout_width="0dp"
                    android:layout_height="match_parent">
                    <TextView
                        android:id="@+id/txt_vegetable_need"
                        android:text="Muốn đổi rau abc"
                        android:textSize="@dimen/sp17"
                        android:gravity="center_vertical"
                        android:paddingLeft="@dimen/dp10"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />
                </LinearLayout>
                <LinearLayout
                    android:background="@color/red"
                    android:layout_weight="3"
                    android:gravity="center"
                    android:layout_width="0dp"
                    android:layout_height="match_parent">
                    <Button
                        android:id="@+id/btn_exchange"
                        android:text="đổi rau"
                        android:background="@color/white"
                        android:textSize="@dimen/dp20"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
            </LinearLayout>
            <!--hinh anh-->
            <LinearLayout
                android:layout_marginTop="@dimen/dp2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/img_post_content"
                    android:src="@drawable/avatar1"
                    android:scaleType="fitStart"
                    android:adjustViewBounds="true"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </LinearLayout>
            <!--so luot like-->
            <LinearLayout
                android:weightSum="10"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp40">
                <!--so luot like-->
                <LinearLayout
                    android:layout_weight="2"
                    android:gravity="center"
                    android:layout_width="@dimen/dp0"
                    android:layout_height="match_parent">
                    <ImageView
                        android:src="@mipmap/heart"
                        android:layout_width="@dimen/dp20"
                        android:layout_height="@dimen/dp20" />
                </LinearLayout>
                <!--nguoi like like-->
                <LinearLayout
                    android:layout_weight="8"
                    android:gravity="center"
                    android:layout_width="@dimen/dp0"
                    android:layout_height="match_parent">
                    <TextView
                        android:id="@+id/txt_number_like_post"
                        android:gravity="center_vertical"
                        android:textSize="@dimen/sp13"
                        android:text="bạn và 25 người"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />
                </LinearLayout>
            </LinearLayout>
            <!--duong ke ngang height la 1-->
            <TextView
                android:background="@color/background"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp1" />
            <!--btn like and comment-->
            <LinearLayout
                android:weightSum="10"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp40">
                <!--btn like-->
                <LinearLayout
                    android:id="@+id/lnl_post_like"
                    android:layout_weight="3"
                    android:gravity="center"
                    android:layout_width="@dimen/dp0"
                    android:layout_height="match_parent">
                    <LinearLayout
                        android:layout_width="@dimen/dp30"
                        android:layout_height="@dimen/dp30">
                        <ImageView
                            android:id="@+id/img_post_like_status"
                            android:src="@mipmap/heart1"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" />
                    </LinearLayout>
                </LinearLayout>
                <!--btn comment-->
                <LinearLayout
                    android:id="@+id/lnl_post_comment"
                    android:layout_weight="3"
                    android:gravity="center"
                    android:layout_width="@dimen/dp0"
                    android:layout_height="match_parent">
                    <LinearLayout
                        android:layout_width="@dimen/dp30"
                        android:layout_height="@dimen/dp30">
                        <ImageView
                            android:src="@mipmap/comment"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" />
                    </LinearLayout>
                </LinearLayout>
                <!--layout trong-->
                <LinearLayout
                    android:layout_weight="4"
                    android:layout_width="@dimen/dp0"
                    android:layout_height="match_parent">
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="@dimen/dp20"
                android:layout_marginBottom="@dimen/dp30"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp50">
                <Button
                    android:id="@+id/btn_update_post"
                    android:text="Cập nhật bài đăng"
                    android:textSize="@dimen/dp20"
                    android:gravity="center"
                    android:background="@drawable/bg_btn_login"
                    android:paddingLeft="@dimen/dp20"
                    android:paddingRight="@dimen/dp20"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" />
            </LinearLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</LinearLayout>