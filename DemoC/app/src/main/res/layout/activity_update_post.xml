<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.UpdatePostActivity">


    <LinearLayout
        android:background="@color/sick_green"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp50">
        <LinearLayout
            android:id="@+id/lnl_back"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_width="@dimen/dp0"
            android:layout_height="match_parent">
            <ImageView
                android:src="@drawable/arrow_left_v"
                android:layout_width="@dimen/dp30"
                android:layout_height="@dimen/dp30" />
        </LinearLayout>
        <LinearLayout
            android:layout_weight="4"
            android:layout_width="@dimen/dp0"
            android:layout_height="match_parent">
            <TextView
                android:text="Cập nhật bài viết"
                android:gravity="center"
                android:textSize="@dimen/sp20"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </LinearLayout>
        <LinearLayout
            android:layout_weight="1"
            android:layout_width="@dimen/dp0"
            android:layout_height="match_parent"></LinearLayout>
    </LinearLayout>
    <androidx.core.widget.NestedScrollView
        android:layout_marginTop="@dimen/dp10"
        android:paddingLeft="@dimen/dp10"
        android:paddingRight="@dimen/dp10"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_marginTop="@dimen/dp10"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <!--name vegetable-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp50">
                <TextView
                    android:id="@+id/txt_name_vegetable"
                    android:text="số lượng"
                    android:textSize="@dimen/sp17"
                    android:textColor="@color/sick_green"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/dp10"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </LinearLayout>
            <!--content-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp40">
                <TextView
                    android:text="nội dung"
                    android:textSize="@dimen/sp15"
                    android:textColor="@color/sick_green"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/dp10"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <EditText
                    android:id="@+id/edt_post_content"
                    android:paddingLeft="@dimen/dp8"
                    android:text="Thanh long không hạt"
                    android:textSize="@dimen/sp15"
                    android:paddingTop="@dimen/dp8"
                    android:paddingBottom="@dimen/dp8"
                    android:background="@drawable/bg_edt"
                    android:inputType="text|textMultiLine"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <!--quantity-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp40">
                <TextView
                    android:text="số lượng(chậu)"
                    android:textSize="@dimen/sp15"
                    android:textColor="@color/sick_green"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/dp10"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </LinearLayout>
            <!--noi dung, tieu de bai dang-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <EditText
                    android:id="@+id/edt_post_quantity"
                    android:paddingLeft="@dimen/dp8"
                    android:text="Thanh long không hạt"
                    android:textSize="@dimen/sp15"
                    android:paddingTop="@dimen/dp8"
                    android:background="@drawable/bg_edt"
                    android:inputType="number"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp50" />
            </LinearLayout>
            <!--hinh anh-->
            <LinearLayout
                android:layout_marginTop="@dimen/dp5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/img_post_content"
                    android:src="@drawable/avatar1"
                    android:scaleType="fitStart"
                    android:adjustViewBounds="true"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </LinearLayout>
            <!--update btn-->
            <LinearLayout
                android:layout_marginTop="@dimen/dp20"
                android:layout_marginBottom="@dimen/dp30"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp50">
                <Button
                    android:id="@+id/btn_update_post"
                    android:text="Cập nhật bài đăng"
                    android:textSize="@dimen/dp20"
                    android:gravity="center"
                    android:background="@drawable/bg_btn_login"
                    android:textColor="@color/white"
                    android:paddingLeft="@dimen/dp20"
                    android:paddingRight="@dimen/dp20"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" />
            </LinearLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</LinearLayout>