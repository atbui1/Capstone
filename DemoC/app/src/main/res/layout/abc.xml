<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/white"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <!--linear into menu-->
        <LinearLayout
            android:gravity="end"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp50">
            <LinearLayout
                android:id="@+id/lnl_menu"
                android:gravity="center"
                android:layout_width="@dimen/dp80"
                android:layout_height="match_parent">
                <ImageView
                    android:src="@mipmap/menuhamburger"
                    android:layout_width="@dimen/dp30"
                    android:layout_height="@dimen/dp30" />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <androidx.core.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp150">
                        <!--avatar image-->
                        <LinearLayout
                            android:gravity="center"
                            android:elevation="@dimen/dp80"
                            android:layout_width="@dimen/dp100"
                            android:layout_height="@dimen/dp100">
                            <androidx.cardview.widget.CardView
                                card_view:cardCornerRadius="@dimen/dp40"
                                card_view:cardElevation="@dimen/dp2"
                                card_view:contentPadding="@dimen/dp0"
                                android:layout_marginTop="35dp"
                                android:layout_marginBottom="35dp"
                                android:layout_width="@dimen/dp80"
                                android:layout_height="@dimen/dp80">
                                <ImageView
                                    android:id="@+id/img_personal"
                                    android:src="@drawable/avatar1"
                                    android:scaleType="centerCrop"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent" />
                            </androidx.cardview.widget.CardView>
                        </LinearLayout>
                        <!--full name-->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                            <TextView
                                android:id="@+id/txt_full_name_personal"
                                android:text="abc"
                                android:textSize="@dimen/sp25"
                                android:textStyle="bold"
                                android:gravity="center_horizontal"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent" />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:weightSum="10"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp150">


                        <!--right layout-->
                        <LinearLayout
                            android:layout_weight="10"
                            android:orientation="vertical"
                            android:layout_width="@dimen/dp0"
                            android:layout_height="match_parent">
                            <!--sub right layout-->
                            <LinearLayout
                                android:layout_weight="2"
                                android:orientation="horizontal"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/dp0">
                                <!--posts sum-->
                                <LinearLayout
                                    android:layout_weight="1"
                                    android:orientation="vertical"
                                    android:layout_width="@dimen/dp0"
                                    android:layout_height="match_parent">
                                    <!--number posts-->
                                    <LinearLayout
                                        android:layout_weight="1"
                                        android:layout_width="match_parent"
                                        android:layout_height="@dimen/dp0">
                                        <TextView
                                            android:id="@+id/txt_total_posts"
                                            android:gravity="center"
                                            android:text="2"
                                            android:textSize="@dimen/sp25"
                                            android:textStyle="bold"
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent" />
                                    </LinearLayout>
                                    <!--title posts-->
                                    <LinearLayout
                                        android:layout_weight="1"
                                        android:layout_width="match_parent"
                                        android:layout_height="@dimen/dp0">
                                        <TextView
                                            android:text="posts"
                                            android:textSize="@dimen/sp15"
                                            android:gravity="center"
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent" />
                                    </LinearLayout>
                                </LinearLayout>
                                <!--follow-->
                                <LinearLayout
                                    android:layout_weight="1"
                                    android:orientation="vertical"
                                    android:layout_width="@dimen/dp0"
                                    android:layout_height="match_parent">
                                    <!--number follow-->
                                    <LinearLayout
                                        android:layout_weight="1"
                                        android:layout_width="match_parent"
                                        android:layout_height="@dimen/dp0">
                                        <TextView
                                            android:gravity="center"
                                            android:text="3"
                                            android:textSize="@dimen/sp25"
                                            android:textStyle="bold"
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent" />
                                    </LinearLayout>
                                    <!--title follow-->
                                    <LinearLayout
                                        android:layout_weight="1"
                                        android:layout_width="match_parent"
                                        android:layout_height="@dimen/dp0">
                                        <TextView
                                            android:text="followers"
                                            android:textSize="@dimen/sp15"
                                            android:gravity="center"
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent" />
                                    </LinearLayout>
                                </LinearLayout>
                                <!--following-->
                                <LinearLayout
                                    android:layout_weight="1"
                                    android:orientation="vertical"
                                    android:layout_width="@dimen/dp0"
                                    android:layout_height="match_parent">
                                    <!--number following-->
                                    <LinearLayout
                                        android:layout_weight="1"
                                        android:layout_width="match_parent"
                                        android:layout_height="@dimen/dp0">
                                        <TextView
                                            android:gravity="center"
                                            android:text="4"
                                            android:textSize="@dimen/sp25"
                                            android:textStyle="bold"
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent" />
                                    </LinearLayout>
                                    <!--title following-->
                                    <LinearLayout
                                        android:layout_weight="1"
                                        android:layout_width="match_parent"
                                        android:layout_height="@dimen/dp0">
                                        <TextView
                                            android:text="following"
                                            android:textSize="@dimen/sp15"
                                            android:gravity="center"
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent" />
                                    </LinearLayout>
                                </LinearLayout>
                            </LinearLayout>
                            <!--button follow-->
                            <!--<LinearLayout-->
                            <!--android:layout_weight="1"-->
                            <!--android:layout_width="match_parent"-->
                            <!--android:layout_height="@dimen/dp0">-->
                            <!--<Button-->
                            <!--android:id="@+id/btn_update_account"-->
                            <!--android:background="@drawable/bg_btn_follow"-->
                            <!--android:text="@string/btn_title_profile_edit"-->
                            <!--android:textColor="@color/white"-->
                            <!--android:textSize="@dimen/sp20"-->
                            <!--android:textStyle="bold"-->
                            <!--android:layout_marginLeft="@dimen/dp80"-->
                            <!--android:layout_marginRight="@dimen/dp80"-->
                            <!--android:layout_marginTop="@dimen/dp5"-->
                            <!--android:layout_marginBottom="@dimen/dp5"-->
                            <!--android:layout_width="match_parent"-->
                            <!--android:layout_height="match_parent" />-->
                            <!--</LinearLayout>-->
                        </LinearLayout>

                    </LinearLayout>

                    <!-- recycle view -->
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recycler_share_by_account"
                        android:layout_marginTop="@dimen/dp10"
                        android:layout_marginLeft="@dimen/dp16"
                        android:layout_marginRight="@dimen/dp16"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                    </androidx.recyclerview.widget.RecyclerView>

                </LinearLayout>
            </androidx.core.widget.NestedScrollView>
        </LinearLayout>
    </LinearLayout>
    <!--NavigationView-->
    <com.google.android.material.navigation.NavigationView
        android:layout_gravity="end"
        android:background="@color/white"
        android:layout_width="wrap_content"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_marginTop="@dimen/dp50"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:id="@+id/lnl_request_add_friend"
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp50">
                <TextView
                    android:text="Yêu cầu kết bạn"
                    android:paddingLeft="@dimen/dp50"
                    android:gravity="center_vertical"
                    android:textSize="@dimen/sp17"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/lnl_edit_profile"
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp50">
                <TextView
                    android:text="Cập nhật thông tin"
                    android:paddingLeft="@dimen/dp50"
                    android:gravity="center_vertical"
                    android:textSize="@dimen/sp17"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/lnl_logout"
                android:background="@color/white"
                android:layout_gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp50">
                <TextView
                    android:text="Đăng xuất"
                    android:paddingLeft="@dimen/dp50"
                    android:gravity="center_vertical"
                    android:textSize="@dimen/sp17"
                    android:textStyle="bold"
                    android:textColor="@color/red"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </LinearLayout>
        </LinearLayout>
    </com.google.android.material.navigation.NavigationView>
</androidx.drawerlayout.widget.DrawerLayout>