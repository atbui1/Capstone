<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/bg_btn_follow"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:background="@drawable/bg_btn_follow"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp50">
            <TextView
                android:text="Báo cáo"
                android:textSize="@dimen/sp25"
                android:gravity="center"
                android:paddingLeft="@dimen/dp16"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </LinearLayout>
        <LinearLayout
            android:background="@color/black"
            android:layout_marginLeft="@dimen/dp100"
            android:layout_marginRight="@dimen/dp100"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp2"></LinearLayout>
        <LinearLayout
            android:id="@+id/lnl_report_spam"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp50">
            <TextView
                android:text="Đây là spam"
                android:textSize="@dimen/sp17"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/dp16"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/lnl_report_content_err"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp50">
            <TextView
                android:text="Nội dung không phù hợp"
                android:textSize="@dimen/sp17"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/dp16"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/lnl_report_cheat"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp50">
            <TextView
                android:text="Lừa đảo hoặc gian lận"
                android:textSize="@dimen/sp17"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/dp16"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
