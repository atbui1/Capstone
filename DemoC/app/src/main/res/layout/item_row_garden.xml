<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_marginTop="@dimen/dp2"
    android:layout_marginBottom="@dimen/dp10"
    android:layout_marginLeft="@dimen/dp10"
    android:layout_marginRight="@dimen/dp10"
    android:background="@drawable/bg_edt"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp150">

    <LinearLayout
        android:id="@+id/lnl_garden_root"
        android:layout_marginLeft="@dimen/dp10"
        android:layout_marginRight="@dimen/dp10"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp100">
        <TextView
            android:id="@+id/txt_garden_name"
            android:text="name garden"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/dp30"
            android:textSize="@dimen/dp20"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp30" />
        <TextView
            android:id="@+id/txt_garden_address"
            android:text="address garden"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/dp30"
            android:paddingBottom="@dimen/dp5"
            android:textSize="@dimen/dp16"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp70" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp50">
        <LinearLayout
            android:layout_weight="1"
            android:gravity="center"
            android:layout_width="@dimen/dp0"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/txt_update_garden"
                android:background="@drawable/bg_edt"
                android:text="Chỉnh sửa"
                android:textColor="@color/sick_green"
                android:textSize="@dimen/sp17"
                android:gravity="center"
                android:paddingLeft="@dimen/dp20"
                android:paddingRight="@dimen/dp20"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp40" />
        </LinearLayout>
        <LinearLayout
            android:layout_weight="1"
            android:gravity="center"
            android:layout_width="@dimen/dp0"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/txt_delete_garden"
                android:background="@drawable/bg_edt_red"
                android:text="Xóa"
                android:textColor="@color/red"
                android:textSize="@dimen/sp17"
                android:gravity="center"
                android:paddingLeft="@dimen/dp40"
                android:paddingRight="@dimen/dp40"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp40" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>