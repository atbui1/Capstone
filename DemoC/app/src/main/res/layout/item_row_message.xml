<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_marginTop="@dimen/dp8"
    android:background="@color/white"
    android:gravity="center_vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp60">
        <!--header-->
        <LinearLayout
            android:weightSum="10"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/dp5"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp50">
            <!--avatar poster-->
            <LinearLayout
                android:id="@+id/lnl_message_left"
                android:layout_weight="9"
                android:layout_width="@dimen/dp0"
                android:layout_height="match_parent">
                <!--avatar poster-->
                <LinearLayout
                    android:layout_weight="2"
                    android:gravity="center"
                    android:layout_width="@dimen/dp0"
                    android:layout_height="match_parent">
                    <androidx.cardview.widget.CardView
                        card_view:cardCornerRadius="@dimen/dp25"
                        card_view:cardElevation="@dimen/dp2"
                        card_view:contentPadding="@dimen/dp0"
                        android:layout_width="@dimen/dp50"
                        android:layout_height="@dimen/dp50">
                        <ImageView
                            android:id="@+id/img_message_user"
                            android:src="@drawable/avatar1"
                            android:scaleType="centerCrop"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" />
                    </androidx.cardview.widget.CardView>
                </LinearLayout>
                <!--ten nguoi dang va thoi gian-->
                <LinearLayout
                    android:layout_weight="7"
                    android:orientation="vertical"
                    android:layout_width="@dimen/dp0"
                    android:layout_height="match_parent">
                    <LinearLayout
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp0">
                        <TextView
                            android:id="@+id/txt_message_username"
                            android:text="Tên người đăng"
                            android:textSize="@dimen/sp17"
                            android:gravity="center_vertical"
                            android:textStyle="bold"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp0">
                        <TextView
                            android:id="@+id/txt_message_time"
                            android:text="Thời gian"
                            android:textSize="@dimen/sp15"
                            android:gravity="center_vertical"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
            <!--meatmenu-->
            <LinearLayout
                android:id="@+id/lnl_message_image_delete"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_width="@dimen/dp0"
                android:layout_height="match_parent">
                <ImageView
                    android:id="@+id/img_message_delete"
                    android:src="@drawable/likefasle"
                    android:layout_width="@dimen/dp20"
                    android:layout_height="@dimen/sp20" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>